# NOTE: brew install reattach-to-user-namespace
# https://github.com/ChrisJohnsen/tmux-MacOSX-pasteboard

# Make pbcopy/pbpaste work again inside tmux
set-option -g default-command "reattach-to-user-namespace -l /usr/local/bin/bash"

# In visual selection mode, 'p' will paste the selected
# text to a web pastebin and copy the resulting URL to
# OSX's clipboard
# Ref: http://github.com/caio/pasteit
bind-key -t vi-copy p copy-pipe "reattach-to-user-namespace pasteit"
