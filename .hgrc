[defaults]
cdiff = -q

[extensions]
hgext.extdiff =
hgext.pager =

[extdiff]
cmd.cdiff = colordiff
opts.cdiff = -uprN
cmd.gdiff = gvim
opts.gdiff = -f '+next' -d
cmd.vdiff = vim
opts.vdiff = -f '+next' -d
cmd.kdiff = kdiff3

[pager]
pager = LESS='FSRX' less
ignore = update, push, pull, merge, fetch, clone, record, crecord
