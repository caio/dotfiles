username=Caio Rom√£o <caioromao@gmail.com>

[defaults]
cdiff = -q

[extensions]
alias=
convert=
extdiff=
graphlog=
patchbomb=
record=
hgext.extdiff =
hgext.pager =

[alias]
blame=annotate -u -n
rec=record

[diff]
git=True

[extdiff]
cmd.sbsdiff  = diff
opts.sbsdiff = -N -b --side-by-side --width=90
cmd.cdiff = colordiff
opts.cdiff = -uprN
cmd.gdiff = gvim
opts.gdiff = -f '+next' -d
cmd.vdiff = vim
opts.vdiff = -f '+next' -d
cmd.kdiff = kdiff3

[pager]
pager = LESS='FSRX' less
ignore = update, push, pull, merge, fetch, clone, record, crecord
