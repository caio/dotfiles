[user]
    name = Caio Rom√£o
    email = caioromao@gmail.com

[alias]
    ci = commit
    co = checkout
    st = status
    br = branch
    nb = checkout -b
    logg = log --pretty=oneline
    loga = log --pretty=format:'%Cblue %h %Cgreen %an %Creset %s'
    lastweek = log --pretty=format:'%Cblue %h %Cgreen %an %Creset %s' --since='1 week ago' --until='today'
    lw = log --pretty=format:'%Cblue %h %Cgreen %an %Creset %s' --since='1 week ago' --until='today' --name-status
    report = log --date=short --since='last month 18th' --until='today' --grep='caio' --pretty=format:'%Cblue%cd %Cgreen %an %Creset %s' --author='caio'

[core]
    editor = vim

[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[url "git@github.com:caio/"]
    insteadOf = github:

[url "git://github.com/"]
    insteadOf = gh:

[merge]
	tool = vimdiff
