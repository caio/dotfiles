# vim: noet:sw=8
[user]
	name = Caio
	email = contact@caio.co
	signingkey = caioromao@gmail.com

[alias]
	ci = commit -v
	co = checkout
	st = status -sb --ignore-submodules
	br = branch -v
	mt = mergetool
	unstage = reset HEAD --
	revname = name-rev --name-only --refs=refs/heads/*
	changed = diff --name-status -r
	findoldfile = rev-list -n 1 HEAD --
	fixup = commit --amend --no-edit
	news = log --reverse --no-merges --stat @{1}..

[core]
	editor = nvim
	whitespace = blank-at-eol,space-before-tab,tab-in-indent
	preloadindex = true
	excludesfile = ~/.gitignore

[color]
	ui = auto

[merge]
	tool = vimdiff
	conflictstyle = diff3
	prompt = false

[rebase]
	stat = true

[diff]
	renames = copies
	noprefix = true
	wordRegex = [^[:space:]]
	compactionHeuristic = true
	algorithm = patience

[log]
	decorate = short

[push]
	default = current

[branch]
	autosetuprebase = always
	autosetupmerge = always
[commit]
	verbose = true
[mergetool]
	keepBackup = false
[init]
	defaultBranch = main
