[user]
	name = Caio
	email = contact@caio.co
	signingkey = caioromao@gmail.com

[alias]
	ci = commit -v
	co = checkout
	st = status -sb --ignore-submodules
	br = branch -v
	unstage = reset HEAD --
	changed = diff --name-status -r
	fixup = commit --amend --no-edit
	news = log --reverse --stat @{1}..

[color]
	ui = auto

[merge]
	tool = nvimdiff

[rebase]
	stat = true

[format]
	pretty = fuller

[diff]
	noprefix = true
	tool = nvimdiff

[log]
	decorate = short

[push]
	default = upstream

[branch]
	autosetuprebase = always
	autosetupmerge = simple

[commit]
	verbose = true

[mergetool]
	keepBackup = false

[mergetool "nvimdiff"]
	layout = "LOCAL,BASE,REMOTE / MERGED"

[init]
	defaultBranch = main

[pull]
	rebase = true

[fetch]
	prune = true
