# vim: noet:sw=8
[user]
	name = Caio Rom√£o
	email = caioromao@gmail.com
	signingkey = caioromao@gmail.com

[alias]
	ci = commit
	co = checkout
	st = status -sb
	br = branch -v
	nb = checkout -b
	lo = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative
	la = log --graph --all --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative
	lw = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative --since 'last week'
	report = log --no-merges --since='30 days ago' --author caio --pretty=format:'%Cgreen(%ci) %Creset%s'
	unstage = reset HEAD --
	revname = name-rev --name-only --refs=refs/heads/*
	changed = diff --name-status -r
	from = !sh -c 'git branch -r|grep "$1"' -
	findoldfile = rev-list -n 1 HEAD --

[core]
	editor = vim
	whitespace = blank-at-eol,space-before-tab,tab-in-indent
	preloadindex = true
	excludesfile = ~/.gitignore

[color]
	ui = auto

[url "git@github.com:caio/"]
	insteadOf = github:

[url "git://github.com/"]
	insteadOf = gh:

[merge]
	tool = threesome
	log = true

[mergetool "threesome"]
	cmd = vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'
	trustExitCode = true

[help]
	autocorrect = 5

[rebase]
	stat = true

[web]
	browser = google-chrome

[diff]
	renames = copies
	noprefix = true
	wordRegex = [^[:space:]]

[log]
	decorate = short

[sendemail]
	smtpserver = la.relay.ibm.com
	chainreplyto = false

[giggle]
	main-window-maximized = false
	main-window-geometry = 696x1027+694+19
	main-window-view = HistoryView

[push]
	default = upstream
[branch]
	autosetuprebase = always
	autosetupmerge = always
