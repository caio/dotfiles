[user]
	name = Caio
	email = contact@caio.co
	signingkey = caioromao@gmail.com

[alias]
	ci = commit -v
	co = checkout
	st = status -sb --ignore-submodules
	br = branch -v
	mt = mergetool
	unstage = reset HEAD --
	revname = name-rev --name-only --refs=refs/heads/*
	changed = diff --name-status -r
	findoldfile = rev-list -n 1 HEAD --
	fixup = commit --amend --no-edit
	news = log --reverse --stat @{1}..

[color]
	ui = auto

[merge]
	tool = vimdiff

[rebase]
	stat = true

[format]
	pretty = fuller

[diff]
	noprefix = true

[log]
	decorate = short

[push]
	default = upstream

[branch]
	autosetuprebase = always
	autosetupmerge = always

[commit]
	verbose = true

[mergetool]
	keepBackup = false

[init]
	defaultBranch = main

[pull]
	rebase = true

[fetch]
	prune = true
