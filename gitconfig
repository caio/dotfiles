# vim: noet:sw=8
[user]
	name = Caio Rom√£o
	email = hello@caio.co
	signingkey = caioromao@gmail.com

[alias]
	ci = commit -v
	co = checkout
	p = cherry-pick
	st = status -sb --ignore-submodules
	br = branch -v
	mt = mergetool
	gmt = mergetool --tool=guisplice
	lo = log --no-merges --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %Cgreen(%ar)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative
	la = log --graph --all --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset - %Cgreen(%ar)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative
	lm = log --no-merges --date=relative --author='Caio R'
	unstage = reset HEAD --
	revname = name-rev --name-only --refs=refs/heads/*
	changed = diff --name-status -r
	findoldfile = rev-list -n 1 HEAD --
	fixup = commit --amend --no-edit
	remote-branches = branch --list --no-column --no-color -r 'origin/caio/*'
	rb = !git remote-branches |sed \"s/\\s\\+origin\\///g\"

[core]
	editor = vim
	whitespace = blank-at-eol,space-before-tab,tab-in-indent
	preloadindex = true
	excludesfile = ~/.gitignore

[color]
	ui = auto

[merge]
	tool = splice
	log = true

[mergetool "splice"]
	cmd = vim $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'
	trustExitCode = true

[rebase]
	stat = true

[diff]
	renames = copies
	noprefix = true
	wordRegex = [^[:space:]]
	compactionHeuristic = true

[log]
	decorate = short

[push]
	default = current

[branch]
	autosetuprebase = always
	autosetupmerge = always
[commit]
	verbose = true
