#!/bin/bash

PCM=$(amixer get PCM| sed -n 7p| sed -e 's/\[//g' -e 's/\]//g'| awk '{ print $5 }')
SPKR=$(amixer get Speaker| sed -n 6p| awk '{ print $4 }')

WHITE="<span color=\"white\">"
NOWHITE="</span>"

if [[ "${SPKR/off/Test}" = "$SPKR" ]]
then
    echo "${WHITE}[snd:${NOWHITE} ${PCM}${WHITE}]${NOWHITE}"
else
    echo "${WHITE}[snd:${NOWHITE} Muted${WHITE}]${NOWHITE}"
fi

