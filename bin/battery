#!/bin/bash

OUTPUT=$(battery.pl | sed -n 4p | cut -d: -f 2)

WHITE="<span color=\"white\">"
NOWHITE="</span>"

if [[ "${OUTPUT/Infinite/Test}" == "$OUTPUT" ]]
then
    echo "${WHITE}[batt: ${NOWHITE}${OUTPUT/ /}${WHITE}]${NOWHITE}"
else
    echo "${WHITE}[batt:${NOWHITE} a/c${WHITE}]${NOWHITE}"
fi
