[diff]
git=True

[extdiff]
cmd.sbsdiff  = diff
opts.sbsdiff = -N -b --side-by-side --width=90
cmd.gdiff = gvim
opts.gdiff = -f '+next' -d
cmd.vdiff = vim
opts.vdiff = -f '+next' -d
